<div class="section">
  <div class="container">
    <div class="row">
			
			<div class="col-xs-12">
				<%= form_for(@project) do |f| %>
					<%= f.label :name , "プロジェクトのタイトル" %>
					<%= f.text_field :name %>
					
					<%= f.label :year, "年度(西暦) 20xx(半角)" %>
					<%= f.text_field :year %>
					
					<%= f.label :researcher, "研究者(書き方：A,B,C)"%>
					<%= f.text_field :researcher %>
					
					<%= f.label :filename, "ファイル #{@project.filename}" %>
					<%= f.file_field :upload_file %>
					
					<%= f.label :imgfilename, "サムネイル画像 #{@project.imgfilename}" %>
					<%= f.file_field :img %>
					
					<%= f.submit "変更を保存", class: "btn btn-primary" %>
				<% end %>
			</div>
			
		</div>
  </div>
</div>


